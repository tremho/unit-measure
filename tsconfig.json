{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom"
    ],
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "removeComments": false
  },
  "include": ["./src/*", "./test/*"]
}
